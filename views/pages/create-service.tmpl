{{ template "header.tmpl" . }}
</head>
{{ template "menu.tmpl" . }}
  <div class="main-content">
        <section class="section">
          <div class="section-header">
            <h1>{{ if .data }} Update {{ else }} Create New {{ end }} Service</h1>
          </div>

          <div class="section-body">
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                        <div class="card-body">
                            <form method="post" {{ if .data }} action="/update-service" {{ end }}>
                            {{ if .data.ID }} <input type="text" id="id" name="id" value="{{ .data.ID }}" hidden> {{ end }}
                                <div class="form-group">
                                  <label>Name</label>
                                  <input type="text" id="name" name="name" class="form-control" {{ if .data.Name }} value="{{ .data.Name }}" {{ end }} required>
                                </div>
                                <div class="form-group">
                                  <label>Type</label>
                                  <select class="form-control" id="type" name="type" required>
                                    <option value="solution" {{ if .data }} {{ if eq .data.Type "solution" }} selected {{ end }} {{ end }}>Solution</option>
                                    <option value="analytic" {{ if .data }} {{ if eq .data.Type "analytic" }} selected {{ end }} {{ end }}>Analytics</option>
                                    <option value="innovation" {{ if .data }} {{ if eq .data.Type "innovation" }} selected {{ end }} {{ end }}>New Innovation</option>
                                    <option value="solution-partner" {{ if .data }} {{ if eq .data.Type "solution-partner" }} selected {{ end }} {{ end }}>Solution Partner</option>
                                  </select>
                                </div>
                                <div class="form-group">
                                  <label>Slug</label>
                                  <input type="text" class="form-control" id="slug" name="slug" {{ if .data.Slug }} value="{{ .data.Slug }}" {{ end }} required>
                                </div>
                                <div class="form-group">
                                  <label>Thumbnail Filename</label>
                                  <input type="text" class="form-control" id="thumbnail" name="thumbnail" {{ if .data.Thumbnail }} value="{{ .data.Thumbnail }}" {{ end }} required>
                                </div>
                                <div class="form-group">
                                  <label>Access Key</label>
                                  <input type="text" class="form-control" id="access_key" name="access_key" {{ if .data.AccessKey }} value="{{ .data.AccessKey }}" {{ end }}>
                                </div>
                                <div class="form-group">
                                  <label>Token</label>
                                  <input type="text" class="form-control" id="token" name="token" {{ if .data.Token }} value="{{ .data.Token }}" {{ end }}>
                                </div>
                                <div class="form-group">
                                  <label>Timestamp</label>
                                  <input type="text" class="form-control" id="timestamp" name="timestamp" {{ if .data.Timestamp }} value="{{ .data.Timestamp }}" {{ end }}>
                                </div>
                                <div class="form-group">
                                  <label>Short Description</label>
                                  <textarea class="form-control" rows="3" id="short_description" name="short_description" required>{{ if .data.ShortDescription }} {{ .data.ShortDescription }} {{ end }}</textarea>
                                </div>
                                <div class="form-group">
                                  <label>Long Description</label>
                                  <textarea class="form-control" rows="3" id="long_description" name="long_description">{{ if .data.LongDescription }} {{ .data.LongDescription }} {{ end }}</textarea>
                                </div>
                                <div class="form-group">
                                  <label>Special Instruction</label>
                                  <input type="text" class="form-control" id="special_instruction" name="special_instruction" {{ if .data.SpecialInstruction }} value="{{ .data.SpecialInstruction }}" {{ end }}>
                                </div>
                                <button type="submit" class="btn btn-primary">Save</button>
                            </form>
                        </div>
                        </div>
                    </div>
                </div>
          </div>
        </section>
      </div>
{{ template "footer.tmpl" . }}
  </body>
</html>